<h3>新規投稿ページ</h3>
<%= form_for @dog do |f| %>

  <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url, :size => 140 %>

    <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

    <div class="field">
    <%= f.label :投稿 %>
    <%= f.text_area :body, :size => "30x2" %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>
<%= link_to "一覧に戻る", dogs_path %>




    